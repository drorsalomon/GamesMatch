extends account

block account
    .account__form
        .form__headline Users Stats
            .stats__headline__container
                .stats__traits__headline Average trait score across users
            .stats__traits__container
                each trait in avgTraitsScoreArray        
                    .trait__container
                        .trait__name=`${trait._id}: ` 
                        .trait__separator &nbsp; 
                        .trait__value= trait.avgTraitScore
            .stats__headline__container            
                .stats__traits__headline Average survey completion time
            .stats__traits__container
                each time in avgSurveyCompTime        
                    .trait__container
                        .trait__name Time: 
                        .trait__separator &nbsp; 
                        .trait__value= `${time.avgCompTime}m`